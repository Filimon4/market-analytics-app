model ApiKey {
  id        BigInt   @id @default(autoincrement())
  projectId BigInt
  name      String
  key       String
  scope     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
  expiresAt DateTime
  statusId  Int
  createdBy BigInt

  status  ApiKeyStatus @relation(fields: [statusId], references: [id])
  project Project      @relation(fields: [projectId], references: [id])
}
